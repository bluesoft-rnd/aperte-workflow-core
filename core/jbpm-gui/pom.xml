        </dependency>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>base-gui</artifactId>
            <type>war</type>
            <version>3.2-SNAPSHOT</version>
			<exclusions>
				<exclusion>
					<groupId>cglib</groupId>
					<artifactId>cglib</artifactId>
