	<filter-mapping>
        <filter-name>PermissionFilter</filter-name>
        <url-pattern>/queue_editor/*</url-pattern>
    </filter-mapping>

	<filter-mapping>
        <filter-name>PermissionFilter</filter-name>
        <url-pattern>/osgi</url-pattern>
    </filter-mapping>
