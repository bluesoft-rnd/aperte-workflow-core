<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>plugins</artifactId>
        <groupId>org.aperteworkflow</groupId>
        <version>2.1-SNAPSHOT</version>
    </parent>

    <artifactId>bpm-notifications</artifactId>
    <name>bpm-notifications</name>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>scheduler-integration</artifactId>
            <version>${aperteworkflow.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>integration-interface</artifactId>
            <version>${aperteworkflow.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>${hibernate.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
            <version>1.4.3</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.freemarker</groupId>
            <artifactId>freemarker</artifactId>
            <version>2.3.19</version>
        </dependency>
		<dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin</artifactId>
            <version>${vaadin.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>gui-commons</artifactId>
            <version>${aperteworkflow.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>${maven.bundle.plugin}</version>
                <configuration>
                    <instructions>
                        <Export-Package>
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.service,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.templates,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.sessions,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.model,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.addons,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.facade
                        </Export-Package>
                        <Import-Package>
                            org.aperteworkflow.bpmnotifications.addons.impl;resolution:=optional,
                            javax.mail;version=!,
                            pl.net.bluesoft.rnd.util.i18n.impl,
                            javassist.util.proxy,org.hibernate.proxy,
                            org.osgi.framework,
                            org.hibernate.exception,
                            javax.mail.internet;version=!,
                            *;resolution:=optional,
                            pl.net.bluesoft.util.eventbus,
                            pl.net.bluesoft.rnd.pt.ext.sched.service,
                            pl.net.bluesoft.rnd.processtool.di,
                            pl.net.bluesoft.rnd.processtool.plugins,
                            pl.net.bluesoft.rnd.processtool.plugins.osgi,
                            org.aperteworkflow.util.vaadin,
                            org.aperteworkflow.util.vaadin.ui,
                            org.aperteworkflow.util.vaadin.ui.table,
                            org.quartz,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.service,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.templates,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.sessions,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.model,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.addons,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.facade
                        </Import-Package>
                        <Private-Package>
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications,
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications.step,
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications.event,
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications.portlet,
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications.addons.mock.impl,
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications.settings
                        </Private-Package>
                        <Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
                        <Bundle-Activator>pl.net.bluesoft.rnd.pt.ext.bpmnotifications.Activator</Bundle-Activator>
                        <Bundle-SymbolicName>pl.net.bluesoft.rnd.pt.ext.bpmnotifications</Bundle-SymbolicName>
                        <Bundle-Version>0.1</Bundle-Version>
                        <Embed-Directory>lib</Embed-Directory>
                        <Embed-Transitive>true</Embed-Transitive>
                        <ProcessTool-Step-Enhancement>pl.net.bluesoft.rnd.pt.ext.bpmnotifications.step.SendMailStep</ProcessTool-Step-Enhancement>
                        <ProcessTool-Model-Enhancement>
                        	pl.net.bluesoft.rnd.pt.ext.bpmnotifications.model.BpmNotificationTemplate,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.model.BpmNotification,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.model.BpmNotificationConfig,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.model.BpmNotificationMailProperties
                        </ProcessTool-Model-Enhancement>
                        <ProcessTool-I18N-Property>messages</ProcessTool-I18N-Property>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
	    <!-- Profil dev do automatycznego kopiowania jarow do osgi -->
    <profiles>
    
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
	            <plugins>
		            <plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>${maven.dependency.version}</version>
						<executions>
							<execution>
								<id>copy</id>
								<phase>package</phase>
								<goals>
									<goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>${project.artifactId}</artifactId>
											<type>jar</type>
											<version>${project.version}</version>
											<overWrite>true</overWrite>
											<outputDirectory>${osgi.dir}</outputDirectory>
											<destFileName>${project.artifactId}-${project.version}.jar</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
