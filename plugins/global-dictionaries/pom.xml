<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>plugins</artifactId>
        <groupId>org.aperteworkflow</groupId>
        <version>3.0-beta2-SNAPSHOT</version>
    </parent>

    <packaging>bundle</packaging>
    <artifactId>global-dictionaries</artifactId>
    <name>global-dictionaries</name>

    <dependencies>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>integration-interface</artifactId>
            <version>3.0-beta2-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
		<dependency>
			<groupId>org.aperteworkflow</groupId>
			<artifactId>integration</artifactId>
			<version>3.0-beta2-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>${hibernate.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
	

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>2.1.0</version>
                <configuration>
                    <instructions>
                        <!--<Implementation-Build>${buildNumber}</Implementation-Build>-->
                        <Export-Package>
                            pl.net.bluesoft.rnd.pt.dict.global.controller,
                            pl.net.bluesoft.rnd.pt.dict.global.i18n,
							pl.net.bluesoft.rnd.pt.dict.global.xml,
                            pl.net.bluesoft.rnd.pt.dict.global.ui,
                            pl.net.bluesoft.rnd.pt.dict.global
                        </Export-Package>
                        <Import-Package>
                            *;resolution:=optional,
                            pl.net.bluesoft.rnd.util.i18n,
							pl.net.bluesoft.rnd.processtool.dict,
                            pl.net.bluesoft.rnd.processtool.dict.exception,
							pl.net.bluesoft.rnd.processtool.dict.xml,
                            org.codehaus.jackson;version="1.9.13",
                            org.codehaus.jackson.map;version="1.9.13",
                            org.codehaus.jackson.type;version="1.9.13",
                            org.codehaus.jackson.map.type;version="1.9.13",
                            javassist.util.proxy,
                            org.hibernate.proxy
                        </Import-Package>
                        <Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
                        <Bundle-Activator>pl.net.bluesoft.rnd.pt.dict.global.GlobalDictionariesActivator</Bundle-Activator>
                        <Bundle-SymbolicName>pl.net.bluesoft.rnd.pt.dict.global</Bundle-SymbolicName>
                        <Bundle-Version>0.1</Bundle-Version>
                        <Bundle-Name>Global dictionaries</Bundle-Name>
                        <Bundle-Description>Global dictionaries</Bundle-Description>
                        <Embed-Directory>lib</Embed-Directory>
                        <Embed-Transitive>true</Embed-Transitive>
                        <ProcessTool-Global-Dictionary>pl.net.bluesoft.rnd.pt.dict.global</ProcessTool-Global-Dictionary>
                        <ProcessTool-Controller>
                            pl.net.bluesoft.rnd.pt.dict.global.DictionaryService,
                            pl.net.bluesoft.rnd.pt.dict.global.controller.DictionaryEditorController
                        </ProcessTool-Controller>
                        <ProcessTool-Spring-Beans>
                            pl.net.bluesoft.rnd.pt.dict.global.facade.GlobalDictionaryFacade
                        </ProcessTool-Spring-Beans>
                        <ProcessTool-I18N-Property>globaldictionaries-messages</ProcessTool-I18N-Property>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
        <!-- Profil dev do automatycznego kopiowania jarow do osgi -->
    <profiles>
    
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
	            <plugins>
		            <plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>2.4</version>
						<executions>
							<execution>
								 <id>copy-installed</id>
								<phase>install</phase>
								<goals>
								  <goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>${project.artifactId}</artifactId>
											<type>jar</type>
											<version>${project.version}</version>
											<overWrite>true</overWrite>
											<outputDirectory>${osgi.dir}</outputDirectory>
											<destFileName>${project.artifactId}-${project.version}.jar</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
