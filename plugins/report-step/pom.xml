<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>plugins</artifactId>
        <groupId>org.aperteworkflow</groupId>
        <version>3.2-SNAPSHOT</version>
    </parent>

    <artifactId>report-step</artifactId>
    <name>report-step</name>
    <packaging>bundle</packaging>

    <dependencies>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>${hibernate.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>integration-interface</artifactId>
            <version>3.2-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <artifactId>cmis-widget</artifactId>
            <groupId>org.aperteworkflow</groupId>
            <version>3.2-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
         <dependency>
		    <groupId>org.apache.chemistry.opencmis</groupId>
		    <artifactId>chemistry-opencmis-osgi-client</artifactId>
		    <version>0.9.0-beta-1</version>
		 </dependency>
        <dependency>
            <groupId>org.aperteworkflow</groupId>
            <artifactId>aperte-reports-integration</artifactId>
            <version>3.2-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>     
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>${maven.bundle.plugin}</version>
                <configuration>
                    <instructions>
                        <Export-Package>
                            pl.net.bluesoft.rnd.pt.ext.report.step;version=${project.version}
                        </Export-Package>
                        <Import-Package>
                        	pl.net.bluesoft.rnd.pt.ext.report.step;version=${project.version},
                        	org.aperteworkflow.cmis.widget;version=${project.version},
                        	
                            pl.net.bluesoft.rnd.pt.ext.apertereportsintegration.model,
                        	pl.net.bluesoft.rnd.pt.ext.apertereportsintegration.dao,
                        	pl.net.bluesoft.rnd.pt.ext.apertereportsintegration,
                        	
                            javax.xml.*;resolution:=optional,
                            org.xml.sax,
                            org.jdom.output;resolution:=optional,
                            org.slf4j.impl;resolution:=optional,
                            com.lowagie.toolbox;resolution:=optional,
                            com.sun.msv.*;resolution:=optional,
                            org.w3c.dom.xpath;resolution:=optional,
                            com.sun.org.apache.xerces.internal.dom;resolution:=optional,
                            com.sun.xml.fastinfoset.dom;resolution:=optional,
                            com.sun.xml.fastinfoset.vocab;resolution:=optional,
                            org.apache.commons.codec.binary;resolution:=optional,
                            
                            org.apache.chemistry.opencmis.client.api;version="0.9.0-beta-1",
                            org.apache.chemistry.opencmis.commons.*;version="0.9.0-beta-1",
                            org.apache.chemistry.opencmis.commons.enums;version="0.9.0-beta-1",
                            org.apache.chemistry.opencmis.commons.impl.dataobjects;version="0.9.0-beta-1",
                            *
                        </Import-Package>
                        <Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
                        <Bundle-SymbolicName>pl.net.bluesoft.rnd.pt.ext.report</Bundle-SymbolicName>
                        <Bundle-Activator>pl.net.bluesoft.rnd.pt.ext.report.Activator</Bundle-Activator>
                        <Bundle-Version>0.1</Bundle-Version>
                        <Embed-Directory>lib</Embed-Directory>
                        <Embed-Transitive>true</Embed-Transitive>
                        <ProcessTool-Step-Enhancement>pl.net.bluesoft.rnd.pt.ext.report.step.GenerateDocument</ProcessTool-Step-Enhancement>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
	 <!-- Auto copy bundle jar to osgi directory -->
    <profiles>
    
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
	            <plugins>
		            <plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>${maven.dependency.version}</version>
						<executions>
							<execution>
								 <id>copy-installed</id>
								<phase>install</phase>
								<goals>
								  <goal>copy</goal>
								</goals>
								<configuration>
									<artifactItems>
										<artifactItem>
											<groupId>${project.groupId}</groupId>
											<artifactId>${project.artifactId}</artifactId>
											<type>jar</type>
											<version>${project.version}</version>
											<overWrite>true</overWrite>
											<outputDirectory>${osgi.dir}</outputDirectory>
											<destFileName>${project.artifactId}-${project.version}.jar</destFileName>
										</artifactItem>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
