    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <version>${maven.bundle.version}</version>
                <configuration>
                    <instructions>
                        <Export-Package>

                        </Export-Package>
                        <Import-Package>
                            pl.net.bluesoft.rnd.processtool,
                            pl.net.bluesoft.rnd.processtool.model,
                            pl.net.bluesoft.rnd.processtool.exceptions,
                            pl.net.bluesoft.rnd.processtool.plugins,
                            pl.net.bluesoft.rnd.processtool.steps,
                            pl.net.bluesoft.rnd.processtool.ui.widgets,
                            pl.net.bluesoft.rnd.processtool.ui.widgets.impl,
                            pl.net.bluesoft.rnd.processtool.ui.widgets.annotations,
                            pl.net.bluesoft.rnd.processtool.model.processdata,
                            pl.net.bluesoft.rnd.processtool.process.externalkey,
                            pl.net.bluesoft.rnd.util.i18n,
                            pl.net.bluesoft.casemanagement,
                            pl.net.bluesoft.casemanagement.controller,
                            pl.net.bluesoft.casemanagement.controller.bean,
                            pl.net.bluesoft.casemanagement.dao,
                            pl.net.bluesoft.casemanagement.model,
                            pl.net.bluesoft.casemanagement.model.util,
                            pl.net.bluesoft.casemanagement.processor,
                            pl.net.bluesoft.casemanagement.step.util,
                            pl.net.bluesoft.casemanagement.ui,
                            pl.net.bluesoft.interactivereports.templates,
                            pl.net.bluesoft.interactivereports.service,
                            pl.net.bluesoft.util.eventbus,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.service,
                            pl.net.bluesoft.rnd.pt.ext.bpmnotifications.utils,
                            org.aperteworkflow.files,
                            org.aperteworkflow.files.dao,
                            org.codehaus.jackson;version="1.9.13",
                            org.codehaus.jackson.map;version="1.9.13",
                            org.codehaus.jackson.type;version="1.9.13",
                            org.codehaus.jackson.map.type;version="1.9.13",
                            org.codehaus.jackson.map.ser;version="1.9.13",
                            org.codehaus.jackson.map.ser.impl;version="1.9.13",
                            org.codehaus.jackson.map.annotate;version="1.9.13",
                            org.apache.commons.lang;version="2.6",
                            org.springframework.web.util;version="3.0",
                            javax.mail;version=!,
                            javassist.util.proxy,
                            org.hibernate.proxy,
                            pl.net.bluesoft.rnd.processtool.auditlog,
                            pl.net.bluesoft.rnd.processtool.auditlog.builders,
                            pl.net.bluesoft.rnd.processtool.auditlog.definition,
                            pl.net.bluesoft.rnd.processtool.auditlog.model,
                            org.jsoup,
                            org.jsoup.nodes,
                            org.jsoup.safety,
                            org.jsoup.select,
                            org.quartz,
                            org.w3c.dom.css,
                            *;resolution:=optional
                        </Import-Package>
                        <Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
                        <Bundle-SymbolicName>org.aperteworkflow.samples.application.widgets</Bundle-SymbolicName>
                        <Bundle-Version>0.1</Bundle-Version>
                        <Embed-Directory>lib</Embed-Directory>
                        <Embed-Transitive>true</Embed-Transitive>
                        <ProcessTool-Global-Dictionary>dictionary</ProcessTool-Global-Dictionary>
                        <ProcessTool-I18N-Property>messages</ProcessTool-I18N-Property>
                        <!--<ProcessTool-Model-Enhancement></ProcessTool-Model-Enhancement>-->
                        <ProcessTool-Spring-Beans>
                            org.aperteworkflow.samples.application.util.impl.ApplicationSignatureService
                        </ProcessTool-Spring-Beans>
                        <ProcessTool-Widget-View>
                            org.aperteworkflow.samples.application.widgets.view.FillApplicationWidget,
                            org.aperteworkflow.samples.application.widgets.view.ApplicationInfoWidget,
                            org.aperteworkflow.samples.application.widgets.view.ApplicationCaseHistoryWidget
                        </ProcessTool-Widget-View>
                        <ProcessTool-Step-Enhancement>
                            org.aperteworkflow.samples.application.steps.GenerateApplicationCaseNoStep
                        </ProcessTool-Step-Enhancement>
                        <ProcessTool-Mappers>
                            pl.net.bluesoft.casemanagement.processor.ProcessInstanceMapper,
                            org.aperteworkflow.samples.application.mappers.ApplicationMapper
                        </ProcessTool-Mappers>
                        <ProcessTool-Controller>

                        </ProcessTool-Controller>
                        <Interactive-Reports>

                        </Interactive-Reports>
                        <ProcessTool-TaskList-View>
                        </ProcessTool-TaskList-View>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- Profil dev do automatycznego kopiowania jarow do osgi -->
    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>copy-installed</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>${project.artifactId}</artifactId>
                                            <type>jar</type>
                                            <version>${project.version}</version>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${osgi.dir}</outputDirectory>
                                            <destFileName>${project.artifactId}-${project.version}.jar</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>